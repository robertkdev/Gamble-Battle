extends Objectclass_name LogSchema# Shared formatters for stage/chapter labels in UI and logs.static func format_stage(ch: int, sic: int, total: int) -> String:    var c: int = max(1, int(ch))    var s: int = max(1, int(sic))    var t: int = int(total)    if t > 0:        return "Chapter %d — Stage %d/%d" % [c, s, t]    return "Chapter %d — Stage %d" % [c, s]static func format_boss_badge() -> String:    return "BOSS"